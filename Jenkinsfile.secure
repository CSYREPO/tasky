pipeline {
    agent any

    environment {
        AWS_REGION    = "us-east-1"
        CLUSTER_NAME  = "tasky-wiz-eks"
        K8S_DIR       = "k8s"
        AWS_ACCOUNTID = "122610499688"
        ECR_REPO      = "tasky"
        IMAGE_TAG     = "latest"
        ECR_URL       = "${AWS_ACCOUNTID}.dkr.ecr.${AWS_REGION}.amazonaws.com"
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Docker Cleanup') {
            steps {
                sh """
                  docker system prune -af || true
                  docker image prune -af || true
                """
            }
        }

        stage('Build & Push Image') {
            steps {
                sh """
                  echo "üîê Logging into ECR..."
                  aws ecr get-login-password --region ${AWS_REGION} | docker login --username AWS --password-stdin ${ECR_URL}

                  echo "üê≥ Building image..."
                  docker build -t ${ECR_REPO}:${IMAGE_TAG} .

                  echo "üè∑Ô∏è Tagging image..."
                  docker tag ${ECR_REPO}:${IMAGE_TAG} ${ECR_URL}/${ECR_REPO}:${IMAGE_TAG}

                  echo "üöÄ Pushing image to ECR..."
                  docker push ${ECR_URL}/${ECR_REPO}:${IMAGE_TAG}
                """
            }
        }

        stage('Scan Image (Trivy)') {
            steps {
                sh """
                  echo "üîé Scanning image with Trivy (enforcing failures)..."

                  # put trivy in /tmp so we don't fill the Jenkins workspace
                  if [ ! -x /tmp/trivy ]; then
                    echo "Downloading Trivy to /tmp..."
                    curl -sfL https://raw.githubusercontent.com/aquasecurity/trivy/main/contrib/install.sh | sh -s -- -b /tmp
                  fi

                  # this will FAIL the pipeline if HIGH or CRITICAL exist
                  /tmp/trivy image --severity HIGH,CRITICAL --exit-code 1 ${ECR_URL}/${ECR_REPO}:${IMAGE_TAG}

                  echo "‚úÖ Trivy scan completed and no HIGH/CRITICAL were found."
                """
            }
        }

        stage('Configure AWS & EKS') {
            steps {
                sh """
                  aws eks update-kubeconfig --region ${AWS_REGION} --name ${CLUSTER_NAME}
                  kubectl get nodes
                """
            }
        }

        stage('Deploy to EKS') {
            steps {
                sh """
                  kubectl apply -f ${K8S_DIR}/
                  kubectl -n tasky get pods
                  kubectl -n tasky get svc
                """
            }
        }
    }
}

